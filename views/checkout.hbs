<form action="/checkout" method="post" id="checkout-form">
<div class="row ">

    <div id="toggle"  class=" vertical-menu col-md-4-*  position-fixed " style="width: 20%;   height: 1200px;" >
        <div class="d-md-flex flex-column flex-md-equal w-100 my-md-3 pl-md-3 ">
            <div class="mr-md-3 pt-3 px-3 pt-md-5 px-md-5 text-center text-white overflow-hidden " style="border-radius: 21px 21px 21px 21px;height: 685px;position: relative;border: 3px groove cyan;">
                <div class="bg-info shadow-lg " style="left: 0;right: 0; height: 80px;top: 0; border-radius: 21px 21px 0 0;position: absolute;">
                    <br><label><h3><b><i class="fas fa-shopping-bag zoom"></i>  Checkout</b></h3></label>
                </div>

                <div  id="addressswitch" onclick="address()" class="zz shadow-lg " style="left: 0;right: 0; height: 100px;top: 90px; border-radius: 21px 21px 21px 21px;position: absolute;color: #1c84c6">
                    <h4><b> <br><label> Address </label></b></h4>
                </div>
                <div id="creditswitch" class="zz shadow-lg " onclick="credit()" style="left: 0;right: 0; height: 100px;top: 200px; border-radius: 21px 21px 21px 21px;position: absolute;color: #1a2d41;">
                    <h4><b> <br><label> Credit Card </label></b></h4>
                </div>
                <div id="finishswitch" class="zz shadow-lg "  onclick="finish()" style="left: 0;right: 0; height: 100px;top: 310px; border-radius: 21px 21px 21px 21px;position: absolute;color: #1a2d41;">
                    <h4><b> <br><label> Finish </label></b></h4>
                </div>
                <div class="zz shadow-lg " style="left: 0;right: 0; height: 100px;top: 420px; border-radius: 21px 21px 21px 21px;position: absolute;color: #1a2d41;">
                    <h6><b><br> Apply now or in checkout</b></h6>
                </div>
                <div class="zz shadow-lg " style="left: 0;right: 0; height: 100px;top: 530px; border-radius: 21px 21px 21px 21px;position: absolute;color: #1a2d41;">
                    <h6><b> <br> Apply now or in checkout</b></h6>
                </div>

                <div class=" shadow-sm bg-info" style="left: 0;right: 0; height: 70px;top:610px; border-radius:  0 0 21px 21px;position: absolute;">
                    <br><label><h3></h3></label>
                </div>
            </div>

        </div>

    </div>
    <div id = "addresscontent" class="col-md-4-*   my-2" style="width: 35%; margin-left: 40%; height: 1000px; transition-property: width;transition-duration: 0.5s;">
        <div class="d-md-flex flex-column flex-md-equal w-100 my-md-3 pl-md-3">
            <div class="shadow-lg bg-info mr-md-3  pt-md-3 px-md-2 text-center text-white overflow-hidden" style=" margin-bottom:2%; border-radius: 21px 21px 0px 0px; ">
                <div class="p-2">
                    <h4><b> Address</b></h4>

                </div>

            </div>
            <div class="shadow-lg  mr-md-3  pt-md-3 px-md-2 text-center text-white overflow-hidden" style=" margin-bottom:2%; border-radius: 21px 21px 21px 21px; ">
                <div class="p-2">

                    <label><h6>Shipping Address</h6></label>
                </div>
                <div class="p-2">

                    <input type="text"  class="form-control input-lg" placeholder="Enter Receiver Name" name="name" required><br>
                </div>
                <div class="p-2">
                    <input type="text" class="form-control input-lg" placeholder="Enter Receiver Number" name="password" required><br>
                </div>
                <div class="p-2">

                <input type="text"  class="form-control input-lg" placeholder="Enter Receiver Email" name="email" required><br>
                </div>
                <div class="p-2">
                    <input type="text" class="form-control input-lg" placeholder="Enter Receiver Address" name="address" required><br>
                </div>
                <div class="p-2">
                    <button  class="btn btn-success btn-lg btn-block" onclick="credit()">Next</button>
                </div>
            </div>


        </div>
    </div>
    <div id = "creditcontent" class="col-md-4-*   my-2" style="width: 35%; margin-left: 40%; height: 1000px; transition-property: width;transition-duration: 0.5s;display: none;">
        <div class="d-md-flex flex-column flex-md-equal w-100 my-md-3 pl-md-3">
            <div class="shadow-lg bg-info mr-md-3  pt-md-3 px-md-2 text-center text-white overflow-hidden" style=" margin-bottom:2%; border-radius: 21px 21px 0px 0px; ">
                <div class="p-2">
                    <h4><b> Check Out</b></h4>

                </div>

            </div>
            <div class="shadow-lg  mr-md-3  pt-md-3 px-md-2 text-center text-white overflow-hidden" style=" margin-bottom:2%; border-radius: 21px 21px 21px 21px; ">
                <div class="p-2">

                    <label><h6>Your Total ${{total}}</h6></label>
                </div>

                <div class="p-2">

                    <input type="text"  class="form-control input-lg" placeholder="Enter Card Holder Name" id="card-name" required><br>
                </div>
                <div class="p-2">
                    <input type="Number" class="form-control input-lg" placeholder="Enter Card Number" id="card-number" required><br>
                </div>
                <div class="row" >
                    <div class="col-4 ml-2">
                        <input type="text"  class="form-control input-lg" placeholder="Enter Expiration Year" id="card-expiry-year" required><br>
                    </div>
                    <div class="col-4 ">
                        <input type="text"  class="form-control input-lg" placeholder="Enter Expiration Month" id="card-expiry-month" required><br>
                    </div>
                    <div class="col-4 ml-2" >
                        <input   type="password" class="form-control input-lg" placeholder="Enter CVC" id="card-cvc" required><br>

                    </div>
                </div>
                <div class="p-2">
                    <a class="btn btn-success btn-lg btn-block" onclick="finish()">Next</a>
                </div>


            </div>

        </div>
    </div>
    <div id = "finishcontent" class="col-md-4-*   my-2" style="width: 35%; margin-left: 40%; height: 1000px; transition-property: width;transition-duration: 0.5s;display: none">
        <div class="d-md-flex flex-column flex-md-equal w-100 my-md-3 pl-md-3">
            <div class="shadow-lg bg-info mr-md-3  pt-md-3 px-md-2 text-center text-white overflow-hidden" style=" margin-bottom:2%; border-radius: 21px 21px 0px 0px; ">
                <div class="p-2">
                    <h4><b> Review </b></h4>

                </div>

            </div>
            <div class="shadow-lg  mr-md-3  pt-md-3 px-md-2 text-center text-white overflow-hidden" style=" margin-bottom:2%; border-radius: 21px 21px 21px 21px; ">
                <div class="p-2">
                    <h6><b>Your Order</b></h6>

                </div>

                <div id="charge-error" class="alert alert-danger {{#if noError}} d-none  {{/if}}">
                {{errMsg}}
                </div>
                <div class="p-2">

                    <label type="text"  class="form-control input-lg" placeholder="Enter Card Holder Name" name="email" required></label><br>
                </div>
                <div class="p-2">
                    <label type="Number" class="form-control input-lg" placeholder="Enter Card Number" name="password" required></label><br>
                </div>
                <div class="row" >
                    <div class="col-4 ml-2">
                        <label type="text"  class="form-control input-lg" placeholder="Enter Expiration Year" name="email" required></label><br>
                    </div>
                    <div class="col-4 ">
                        <label type="text"  class="form-control input-lg" placeholder="Enter Expiration Month" name="email" required><br></label>
                    </div>
                    <div class="col-4 ml-2" >
                        <label   type="password" class="form-control input-lg" placeholder="Enter CVV" name="password" required><br></label>

                    </div>
                    <div class=" ml-5"  >
                    <input type="hidden" name="_csrf" value="{{ csrftoken }}">
                        <p><br><h6>By creating an account you agree to our <a href="#" style="color:dodgerblue">Terms & Privacy</a>.</h6></p>
                        <input type="checkbox">
                    </div>
                </div>
                <div class="p-2">
                    <button  class="btn btn-success btn-lg btn-block" id="finalbutton" type="submit">Proceed</button>
                </div>


            </div>

        </div>
    </div>

</div>
</form>

<script
        src="https://code.jquery.com/jquery-3.3.1.min.js"
