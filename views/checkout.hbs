<script>
    function myFunction() {
        var y = document.getElementById("content");
        var x = document.getElementById("toggle");
        if (x.style.display === "none") {
            x.style.display = "block";
            y.style.marginLeft = '20%';
            y.style.width = '75%';
        } else {
            x.style.display = "none";
            y.style.marginLeft = 0;
            y.style.width = '95%';
        }

    }
    function address() {
        document.getElementById("addressswitch").style.backgroundColor = "lawngreen";
        document.getElementById("creditswitch").style.backgroundColor = "transparent";
        document.getElementById("finishswitch").style.backgroundColor = "transparent";

        var y = document.getElementById("addresscontent");
        var x = document.getElementById("creditcontent");
        var z = document.getElementById("finishcontent");
        if (y.style.display === "none") {
            y.style.display = "block";
            x.style.display = "none";
            z.style.display = "none";

        } else {
            y.style.display = "block";
            x.style.display = "none";
            z.style.display = "none";
        }

    }
    function credit() {
        document.getElementById("addressswitch").style.backgroundColor = "transparent";
        document.getElementById("creditswitch").style.backgroundColor = "lawngreen";
        document.getElementById("finishswitch").style.backgroundColor = "transparent";

        var x = document.getElementById("addresscontent");
        var y = document.getElementById("creditcontent");
        var z = document.getElementById("finishcontent");
        if (y.style.display === "none") {
            y.style.display = "block";
            x.style.display = "none";
            z.style.display = "none";
        } else {
            y.style.display = "block";
            x.style.display = "none";
            z.style.display = "none";
        }
    }
    function finish() {
        document.getElementById("addressswitch").style.backgroundColor = "transparent";
        document.getElementById("creditswitch").style.backgroundColor = "transparent";
        document.getElementById("finishswitch").style.backgroundColor = "lawngreen";

        var z = document.getElementById("addresscontent");
        var x = document.getElementById("creditcontent");
        var y = document.getElementById("finishcontent");
        if (y.style.display === "none") {
            y.style.display = "block";
            x.style.display = "none";
            z.style.display = "none";
        } else {
            y.style.display = "block";
            x.style.display = "none";
            z.style.display = "none";
        }
    }

</script>


